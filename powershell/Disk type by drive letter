$driveLetter = "E:"; switch ((Get-WmiObject -Class Win32_LogicalDisk -Filter "DeviceID='$driveLetter'").DriveType) { 2 { Write-Host "Drive $driveLetter is a removable disk." }; 3 { Write-Host "Drive $driveLetter is a local disk." }; 4 { Write-Host "Drive $driveLetter is a network share." }; 5 { Write-Host "Drive $driveLetter is a CD-ROM." }; 6 { Write-Host "Drive $driveLetter is a RAM disk." }; default { Write-Host "Drive $driveLetter has an unknown type." } }